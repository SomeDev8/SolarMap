<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background"
    tools:context="com.rorysoft.solarmap.Map"
    android:id="@+id/map_layout">

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_button"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/musicToggle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="140dp"
        android:layout_marginEnd="140dp"/>

    <ImageView
        android:id="@+id/infoButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info_button"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="140dp"/>

    <ImageView
        android:id="@+id/mercury"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/mercury"
        android:layout_marginRight="86dp"
        android:layout_marginEnd="86dp"
        android:layout_alignTop="@+id/sun"
        android:layout_toLeftOf="@+id/sun"
        android:layout_toStartOf="@+id/sun" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/sun" />

    <ImageView
        android:id="@+id/earth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/earth"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/musicToggle"
        android:layout_alignEnd="@+id/musicToggle" />

    <ImageView
        android:id="@+id/moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/moon"
        android:layout_below="@+id/earth"
        android:layout_toRightOf="@+id/earth"
        android:layout_toEndOf="@+id/earth" />

    <ImageView
        android:id="@+id/jupiter"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:adjustViewBounds="true"
        android:src="@drawable/jupiter"
        android:cropToPadding="false"
        android:layout_above="@+id/neptune"
        android:layout_toLeftOf="@+id/venus"
        android:layout_toStartOf="@+id/venus"
        android:layout_marginBottom="34dp" />

    <ImageView
        android:id="@+id/mars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/mars"
        android:layout_above="@+id/sun"
        android:layout_toRightOf="@+id/moon"
        android:layout_toEndOf="@+id/moon" />

    <ImageView
        android:id="@+id/neptune"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:src="@drawable/neptune"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/pluto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:src="@drawable/pluto" />

    <ImageView
        android:id="@+id/saturn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/saturn"
        android:layout_below="@+id/uranus"
        android:layout_toRightOf="@+id/neptune"
        android:layout_toEndOf="@+id/neptune"
        android:layout_marginTop="-25dp" />

    <ImageView
        android:id="@+id/uranus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:src="@drawable/uranus"
        android:layout_below="@+id/homeButton"
        android:layout_toLeftOf="@+id/pluto"
        android:layout_toStartOf="@+id/pluto"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/venus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/venus"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/moon"
        android:layout_alignLeft="@+id/mercury"
        android:layout_alignStart="@+id/mercury" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="70dp"
        android:alpha="0.95">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
    </RelativeLayout>



</RelativeLayout>
