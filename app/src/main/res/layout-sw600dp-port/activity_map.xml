<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background"
    tools:context="com.rorysoft.solarmap.Map"
    android:id="@+id/map_layout">

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_button"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/musicToggle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"/>

    <ImageView
        android:id="@+id/infoButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info_button"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"/>

    <ImageView
        android:id="@+id/mercury"
        android:layout_width= "20dp"
        android:layout_height ="20dp"
        android:src="@drawable/mercury"
        android:layout_above="@+id/moon"
        android:layout_toLeftOf="@+id/venus"
        android:layout_toStartOf="@+id/venus" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width ="70dp"
        android:layout_height = "70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/sun" />

    <ImageView
        android:id="@+id/earth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/earth"
        android:layout_alignBottom="@+id/sun"
        android:layout_alignLeft="@+id/musicToggle"
        android:layout_alignStart="@+id/musicToggle"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/moon"
        android:layout_below="@+id/earth"
        android:layout_toRightOf="@+id/earth"
        android:layout_toEndOf="@+id/earth" />

    <ImageView
        android:id="@+id/jupiter"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:adjustViewBounds="true"
        android:src="@drawable/jupiter"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/neptune"
        android:layout_toLeftOf="@+id/sun"
        android:layout_toStartOf="@+id/sun" />

    <ImageView
        android:id="@+id/mars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/mars"
        android:layout_marginBottom="81dp"
        android:layout_above="@+id/sun"
        android:layout_alignRight="@+id/moon"
        android:layout_alignEnd="@+id/moon" />

    <ImageView
        android:id="@+id/neptune"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:src="@drawable/neptune"
        android:layout_marginLeft="28dp"
        android:layout_above="@+id/pluto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />

    <ImageView
        android:id="@+id/pluto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:src="@drawable/pluto" />

    <ImageView
        android:id="@+id/saturn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/saturn"
        android:layout_alignTop="@+id/uranus"
        android:layout_toRightOf="@+id/neptune"
        android:layout_toEndOf="@+id/neptune" />

    <ImageView
        android:id="@+id/uranus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:src="@drawable/uranus"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/homeButton"
        android:layout_toRightOf="@+id/mars"
        android:layout_toEndOf="@+id/mars" />

    <ImageView
        android:id="@+id/venus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/venus"
        android:layout_below="@+id/moon"
        android:layout_alignLeft="@+id/jupiter"
        android:layout_alignStart="@+id/jupiter"
        android:layout_marginTop="44dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="70dp"
        android:id="@+id/linearLayout3"
        android:alpha="0.95">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"/>
    </RelativeLayout>


</RelativeLayout>
