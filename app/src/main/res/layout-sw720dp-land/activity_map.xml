<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background"
    tools:context="com.rorysoft.solarmap.Map"
    android:id="@+id/map_layout">

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_button"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/musicToggle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="160dp"
        android:layout_marginEnd="160dp"/>

    <ImageView
        android:id="@+id/infoButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info_button"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"/>

    <ImageView
        android:id="@+id/mercury"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/mercury"
        android:layout_alignTop="@+id/sun"
        android:layout_alignLeft="@+id/jupiter"
        android:layout_alignStart="@+id/jupiter" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/sun" />

    <ImageView
        android:id="@+id/earth"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/earth"
        android:layout_alignBottom="@+id/sun"
        android:layout_alignRight="@+id/musicToggle"
        android:layout_alignEnd="@+id/musicToggle" />

    <ImageView
        android:id="@+id/moon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/moon"
        android:layout_below="@+id/earth"
        android:layout_toLeftOf="@+id/uranus"
        android:layout_toStartOf="@+id/uranus"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"/>

    <ImageView
        android:id="@+id/jupiter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/jupiter"
        android:layout_above="@+id/neptune"
        android:layout_toLeftOf="@+id/sun"
        android:layout_toStartOf="@+id/sun"
        android:layout_marginBottom="-20dp"/>

    <ImageView
        android:id="@+id/mars"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:adjustViewBounds="true"
        android:src="@drawable/mars"
        android:layout_alignBottom="@+id/saturn"
        android:layout_alignRight="@+id/mercury"
        android:layout_alignEnd="@+id/mercury"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/neptune"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/neptune" />

    <ImageView
        android:id="@+id/pluto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:src="@drawable/pluto" />

    <ImageView
        android:id="@+id/saturn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:src="@drawable/saturn"
        android:layout_alignTop="@+id/uranus"
        android:layout_alignLeft="@+id/neptune"
        android:layout_alignStart="@+id/neptune"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/uranus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/uranus"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/pluto"
        android:layout_toStartOf="@+id/pluto" />

    <ImageView
        android:id="@+id/venus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/venus"
        android:layout_alignBottom="@+id/moon"
        android:layout_toLeftOf="@+id/jupiter"
        android:layout_toStartOf="@+id/jupiter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/linearLayout2"
        android:alpha="0.95">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        />
    </RelativeLayout>
</RelativeLayout>
