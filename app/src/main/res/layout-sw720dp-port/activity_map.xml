<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background"
    tools:context="com.rorysoft.solarmap.Map">

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_button"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/musicToggle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"/>

    <ImageView
        android:id="@+id/infoButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:src="@drawable/info_button" />

    <ImageView
        android:id="@+id/mercury"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/sun"
        android:layout_toLeftOf="@+id/sun"
        android:layout_toStartOf="@+id/sun"
        android:src="@drawable/mercury" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/sun" />

    <ImageView
        android:id="@+id/earth"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/earth"
        android:layout_alignBottom="@+id/sun"
        android:layout_alignLeft="@+id/uranus"
        android:layout_alignStart="@+id/uranus" />

    <ImageView
        android:id="@+id/moon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/earth"
        android:layout_toEndOf="@+id/earth"
        android:layout_toRightOf="@+id/earth"
        android:adjustViewBounds="true"
        android:src="@drawable/moon" />

    <ImageView
        android:id="@+id/jupiter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/neptune"
        android:layout_marginBottom="40dp"
        android:layout_toLeftOf="@+id/sun"
        android:layout_toStartOf="@+id/sun"
        android:adjustViewBounds="true"
        android:src="@drawable/jupiter" />

    <ImageView
        android:id="@+id/mars"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="-10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/mars"
        android:layout_below="@+id/saturn"
        android:layout_alignLeft="@+id/sun"
        android:layout_alignStart="@+id/sun" />

    <ImageView
        android:id="@+id/neptune"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/neptune" />

    <ImageView
        android:id="@+id/pluto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:src="@drawable/pluto" />

    <ImageView
        android:id="@+id/saturn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/saturn"
        android:layout_below="@+id/uranus"
        android:layout_toLeftOf="@+id/jupiter"
        android:layout_toStartOf="@+id/jupiter" />

    <ImageView
        android:id="@+id/uranus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:src="@drawable/uranus"
        android:layout_below="@+id/homeButton"
        android:layout_alignRight="@+id/musicToggle"
        android:layout_alignEnd="@+id/musicToggle" />

    <ImageView
        android:id="@+id/venus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/venus"
        android:layout_below="@+id/sun"
        android:layout_toLeftOf="@+id/mercury"
        android:layout_toStartOf="@+id/mercury" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp" />
    </RelativeLayout>
</RelativeLayout>
